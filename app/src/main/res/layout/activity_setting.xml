<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.setting.SettingActivity">

    <TextView
        android:id="@+id/setting_logout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:text="@string/logout"
        tools:ignore="MissingConstraints"
        android:drawableStart="@drawable/ic_baseline_logout_24" />

    <TextView
        android:id="@+id/setting_lang"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="10dp"
        android:text="@string/language"
        android:gravity="start|center_vertical"
        android:background="?attr/selectableItemBackground"
        tools:ignore="MissingConstraints"
        android:drawableStart="@drawable/ic_baseline_language_24"
        app:layout_constraintTop_toBottomOf="@id/setting_logout1"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>